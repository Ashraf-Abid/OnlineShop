@using OnlineShop.Models;
@model IEnumerable<OnlineShop.Models.ProductTypes>
 

@{
    ViewData["Title"] = "Index";
}
<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; <i class="fas fa-cart-plus">Add new product</i></a>
    </div>
</div>

<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression:c=>c.ProducType)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) { 
        <tr>
            <td>@item.ProducType</td>
            <td>
                <partial name="_ButtonPartial" model="@item.Id"/> 
            </td>
        </tr>
        }


    </table>
</div>